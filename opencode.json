{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "fetch": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-fetch"
      ]
    },
    "docs-rs": {
      "type": "local",
      "command": [
        "npx",
        "@nuskey8/docs-rs-mcp@latest",
        "-y"
      ]
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  }
}